@model Lanche  
@*aqui é a partial view que foi criada dentro da pasta shared*@

<div class="col-sm-4 col-md-4 col-lg-4"> @*Definir a class que cria o numero total de coluna, 3 colunas com tamanho 4*@
   
    <p> <img src="@Model.ImagemUrl" class=" img-fluid"> </p>
    <h3>Preco: @Model.Preco.ToString("c")</h3>
    
    <h4><a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.LancheId">@Model.Nome</a></h4>

    <p>@Model.DescricaoCurta</p>
    <div> 
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
            asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">Incluir no Carrinho</a>
        </p>
    </div>
</div>
